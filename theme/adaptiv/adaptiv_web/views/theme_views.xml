<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="adaptiv_web_theme_view_form" model="ir.ui.view">
    <field name="name">adaptiv_web.theme.form</field>
    <field name="model">adaptiv_web.theme</field>
    <field name="arch" type="xml">
      <form string="Theme">
        <div class="oe_title">
          <h1>
            <field name="name" />
          </h1>
        </div>
        <group>
          <group>
            <field name="color_primary" />
            <field name="color_optional" />
          </group>
          <group>
            <field name="color_success" />
            <field name="color_warning" />
            <field name="color_danger" />
            <field name="color_info" />
          </group>
        </group>
        <group>
          <group>
            <field name="color_inverse" />
            <field name="color_shade" />
            <field name="shade_mix" />
          </group>
        </group>
      </form>
    </field>
  </record>
</odoo>
